@using User__Management.ViewModel;
@model MangeRoleMV
<form method="post" >
    <div asp-validation-summary="All" class="text-bg-danger"></div>
    <input hidden asp-for="UserId"/>
    <div class="form-group">
        <label asp-for="FirsName"  class="form-label mt-4"> </label>
        <input asp-for="FirsName"  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="FirsName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="form-label mt-4"> </label>
        <input asp-for="LastName"  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="form-label mt-4"> </label>
        <input asp-for="UserName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-label mt-4"> </label>
        <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-group">
            <input hidden asp-for="@Model.Roles[i].RoleId" />
            <input hidden asp-for="@Model.Roles[i].RoleName" />
            <input class="form-check-input" asp-for="@Model.Roles[i].Isselceted"  />
            <label class="form-check-label" asp-for="@Model.Roles[i].RoleName">@Model.Roles[i].RoleName</label>
        </div>
        <br />
   
    }
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
 
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}